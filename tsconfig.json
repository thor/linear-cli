{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "target": "es2022",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "useUnknownInCatchVariables": false,
    "paths": {
      "generated/*": ["./src/generated/*"]
    }
  },
  "ts-node": {
    "esm": true,
    "swc": true
  },
  "include": ["./src/**/*", "src/index.d.ts"]
}
